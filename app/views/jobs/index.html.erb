<div class="welcome-copy row">
  <div class="large-8 columns">
    We find you and list you the jobs that aren't restricted by commutes or a particular geographic area, internatinally. <a href="#">Learn more...</a>
  </div>
  <div class="large-4 columns">

    <%= link_to(new_job_path) do %>
      <span class="buy-button rbj-button">
        <span class="plus-sign">+</span>
        <div class="first">Post a Job</div>
        <div class="second">$199 for 30 days</div>
      </span>
    <% end %>

  </div>
</div>


<%= link_to '< Back to all categories', root_path, class: "back-link" %>

<ul class="job-list">

  <% if @tag %>
    <h2><%= @tag.titlecase %> Jobs</h2>
  <% else %>
    <h2>All Jobs</h2>
  <% end %>
  <% if @jobs.count == 0 %>
    <div class="nothing-here-sorry">
      <%= image_tag("icons/sad_ipod.png") %>
      <p>
      Sorry, no <%= @tag %> jobs published yet. <br>
      <%= link_to("Post yours", new_job_path) %> and get access to the best people, everywhere
      </p>
    </div>
  <% else %>
    <% @jobs.each do |job| %>
      <li class="<% if job.highlight %>highlight<% end %>" >

        <% if job.created_at > 1.week.ago %>
          <span class="new-job-flair">
            NEW
          </span>
        <% end %>

      <%= link_to(job) do %>
      <span class="job-company_name"><%= job.company_name %></span>
      <span class="job-title"><%= job.title %></span>
      <span class="job-headquarters"><%= job.headquarters %></span>

      <span class="date">
        <%= job.created_at.strftime("%B")[0..2] %> <%= job.created_at.day %>
      </span>
    <% end %>
    </li>
  <% end %>
<% end %>

</ul>
<br>
