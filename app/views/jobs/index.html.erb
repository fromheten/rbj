<h1>Listing jobs</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Headquarters</th>
      <th>Job description</th>
      <th>How to apply</th>
      <th>Company name</th>
      <th>Company url</th>
      <th>Email</th>
      <th>Highlight</th>
      <th>Paid</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr class="<% if job.highlight %>highlight <% end %>" >
        <td><%= job.title %></td>
        <td><%= job.headquarters %></td>
        <td><%= job.job_description %></td>
        <td><%= job.how_to_apply %></td>
        <td><%= job.company_name %></td>
        <td><%= job.company_url %></td>
        <td><%= job.email %></td>
        <td><%= job.highlight %></td>
        <td><%= job.paid %></td>
        <td><%= link_to 'Show', job %></td>
        <td><%= link_to 'Edit', edit_job_path(job) %></td>
        <td><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Job', new_job_path %>
